<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= favicon_link_tag "avengers.ico" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
    <body>
        <div id="top">
          <div id="topbar">

              <% if session[:user_id] %>
                <div id="welcome">
                 Welcome <%= @user.name %>!&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href='/tweet/tweet/home' >Home</a> | <a href='/user/edit_profile' >Edit Profile</a> | <a href='/user/all_users' >All Users</a>
                </div>
                <div id="logout">
                  <%= form_tag "/user/logout" do %>
                    <%= submit_tag "Logout", :name => :logout, :class => :submit %>
                  <% end %>
                </div>
              <% else %>
                <div id="welcome">
                  Welcome!
                </div>
              <% end %>
          </div>
        </div>

        <%= yield %>

        <div id="footer">
          Copyright &copy; localhost 2013. All Rights Reserved.
        </div>

    </body>
</html>
